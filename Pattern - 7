Code-

#include<bits/stdc++.h>

using namespace std;

int main(){
    int number;
    cout<<"Enter the size: "<<endl;
    cin>>number;

    for(int i = 1; i <= number; i++){
        for(int j = 1; j <= i; j++){
            cout<<i;
        }
        cout<<"\n";
    }
    return 0;
}

